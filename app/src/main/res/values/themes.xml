<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.WhoKnowsIt" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/gradient_background</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        
        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        
        <!-- Surface Colors -->
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        
        <!-- Background -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/on_background</item>
        
        <!-- Error & Success -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>
        
        <!-- Shape Appearances - Todo muy redondo -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.WhoKnowsIt.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.WhoKnowsIt.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.WhoKnowsIt.LargeComponent</item>
    </style>

    <!-- Shape Appearances - Formas muy redondeadas -->
    <style name="ShapeAppearance.WhoKnowsIt.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearance.WhoKnowsIt.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <style name="ShapeAppearance.WhoKnowsIt.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">28dp</item>
    </style>

</resources>
