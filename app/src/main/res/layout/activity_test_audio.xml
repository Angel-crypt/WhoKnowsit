<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".ui.TestAudioActivity">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volver"
        android:textSize="16sp"
        android:textColor="@color/on_primary"
        app:backgroundTint="@android:color/transparent"
        android:layout_margin="16dp"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/btn_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pruebas de Audio"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/on_primary"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="48dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sonidos del Juego"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/on_surface"
                        android:layout_marginBottom="32dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_correct"
                        android:layout_width="280dp"
                        android:layout_height="64dp"
                        android:text="CORRECT"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        app:backgroundTint="@color/success"
                        app:cornerRadius="32dp"
                        app:elevation="4dp"
                        android:layout_marginBottom="16dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_wrong"
                        android:layout_width="280dp"
                        android:layout_height="64dp"
                        android:text="WRONG"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        app:backgroundTint="@color/error"
                        app:cornerRadius="32dp"
                        app:elevation="4dp"
                        android:layout_marginBottom="16dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_win"
                        android:layout_width="280dp"
                        android:layout_height="64dp"
                        android:text="WIN"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/on_secondary"
                        app:backgroundTint="@color/secondary"
                        app:cornerRadius="32dp"
                        app:elevation="4dp"
                        android:layout_marginBottom="16dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_lose"
                        android:layout_width="280dp"
                        android:layout_height="64dp"
                        android:text="LOSE"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        app:backgroundTint="@color/warning"
                        app:cornerRadius="32dp"
                        app:elevation="4dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

