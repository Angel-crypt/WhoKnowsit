<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".ui.HomeActivity">

    <LinearLayout
        android:id="@+id/main_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="240dp"
            android:layout_height="280dp"
            android:layout_marginBottom="48dp"
            android:scaleType="fitCenter"
            android:contentDescription="@string/app_name"
            app:srcCompat="@drawable/mascot_thinking"
            tools:ignore="ContentDescription" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/newGame_btn"
            android:layout_width="280dp"
            android:layout_height="72dp"
            android:text="Nuevo Juego"
            android:textSize="24sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:textColor="@color/on_primary"
            app:backgroundTint="@color/primary"
            app:cornerRadius="36dp"
            app:elevation="8dp"
            style="@style/Widget.MaterialComponents.Button" />

    </LinearLayout>

    <!-- Overlay para cerrar el menú al tocar fuera -->
    <View
        android:id="@+id/fab_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- FAB Menu Container -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fab_menu_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- FAB Audio (Secundario) -->
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/fab_audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="16dp"
            android:text="Pruebas de Audio"
            android:textColor="@color/on_primary"
            app:backgroundTint="@color/success"
            app:icon="@drawable/ic_test"
            app:iconTint="@color/on_primary"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/fab_logic"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- FAB Lógica (Secundario) -->
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/fab_logic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="16dp"
            android:text="Pruebas de Lógica"
            android:textColor="@color/on_primary"
            app:backgroundTint="@color/primary"
            app:icon="@drawable/ic_test"
            app:iconTint="@color/on_primary"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/fab_main"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- FAB Principal -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:contentDescription="Menú de Pruebas"
            app:fabSize="normal"
            app:tint="@color/on_primary"
            app:backgroundTint="@color/secondary"
            app:srcCompat="@drawable/ic_test"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
