<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".ui.GameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginBottom="24dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:src="@drawable/mascot_confused"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:contentDescription="Mascota" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Configura tu partida"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginBottom="20dp">

        <TextView
        style="@style/SectionTitleStyle"
            android:textSize="18sp"
        android:text="Categoría" android:id="@+id/cat_text_view"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="8dp">

            <ImageView
                android:id="@+id/cat_film"
                style="@style/CategoryIconStyle"
                android:src="@drawable/ic_category_film" />

            <ImageView
                android:id="@+id/cat_history"
                style="@style/CategoryIconStyle"
                android:src="@drawable/ic_category_history" />

            <ImageView
                android:id="@+id/cat_music"
                style="@style/CategoryIconStyle"
                android:src="@drawable/ic_category_music" />

            <ImageView
                android:id="@+id/cat_pop"
                style="@style/CategoryIconStyle"
                android:src="@drawable/ic_category_pop_culture" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/cat_random"
                style="@style/CategoryIconStyle"
                android:src="@drawable/ic_category_random" />

            <ImageView
                android:id="@+id/cat_science"
                style="@style/CategoryIconStyle"
                android:src="@drawable/ic_category_science" />

            <ImageView
                android:id="@+id/cat_sports"
                style="@style/CategoryIconStyle"
                android:src="@drawable/ic_category_sports" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="20dp"> <TextView
        style="@style/SectionTitleStyle"
        android:text="Dificultad" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/diff_easy"
                style="@style/OptionButtonStyle"
                android:text="Fácil" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/diff_medium"
                style="@style/OptionButtonStyle"
                android:text="Medio" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/diff_hard"
                style="@style/OptionButtonStyle"
                android:text="Difícil" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            style="@style/SectionTitleStyle"
            android:text="Cantidad" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/qty_5"
                style="@style/OptionButtonStyle"
                android:text="5" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/qty_10"
                style="@style/OptionButtonStyle"
                android:text="10" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/qty_20"
                style="@style/OptionButtonStyle"
                android:text="20" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="0" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/play_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="12dp"
        android:text="¡A JUGAR!"
        android:textSize="20sp"
        android:textStyle="bold"
        app:backgroundTint="@color/primary"
        app:cornerRadius="50dp" />

</LinearLayout>